<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Property details</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="js/jquery.js"></script>
    <script src="js/holder.min.js"></script>
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <script src="js/bootstrap.min.js"></script>
    <script src="js/simpleCart.js"></script>
</head>
<body>

        <nav class="navbar navbar-expand-md navbar-dark bg-dark">
                <a class="navbar-brand" href="#">BYARENT</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample04" aria-controls="navbarsExample04" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
                </button>
          
                <div class="collapse navbar-collapse" id="navbarsExample04">
                        <ul class="navbar-nav mr-auto">
                                <li class="nav-item">
                                    <a class="nav-link" href="/">Home </a>
                                </li>
                                <li class="nav-item">
                                  <a class="nav-link" href="/cart">
                                    Cart [<span class="simpleCart_quantity"></span> houses]
                                  </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/sale">For sale</a>
                                </li>
                                <li class="nav-item dropdown">
                                  <a class="nav-link" href="/login">Login</a>
                                </li>
                                <li class="nav-item dropdown">
                                  <a class="nav-link" href="/signup">Sign up</a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link" href="/contact">Contact</a>
                                </li>
                              </ul>
                  <form class="form-inline my-2 my-md-0">
                    <input class="form-control" type="text" placeholder="Search">
                  </form>
                </div>
              </nav>

              <div class="container simpleCart_shelfItem">
                  <div id="carouselExampleIndicators" class="carousel slide mb-4" data-ride="carousel">
                      <ol class="carousel-indicators">

                        <% var watch1 = 1; %>
                        <% pictures.forEach(function(picture, i) { %>
                          <li data-target="#carouselExampleIndicators" data-slide-to="<%= i %>" class="<%= (1 == watch1 ? 'active' : '' ) %>"></li>
                        <% ++watch1; %>
                        <% }); %>

                      </ol>
                      <div class="carousel-inner">

                          <% var watch = 1; %>
                          <% pictures.forEach(function(picture, i) { %>
                            <div class="carousel-item <%= (1 == watch ? 'active' : '' ) %>">
                              <img class="d-block w-100 <%= (1 == watch ? 'item_thumb' : '' ) %>" src="<%= picture.file %>" alt=" slide">
                            </div>
                            <% ++watch; %>
                          <% }); %>
                        

                      </div>
                      <a class="carousel-control-prev bg-dark" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                      </a>
                      <a class="carousel-control-next bg-dark" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                      </a>
              </div>
              <div class="">
                <%# loggedin %>
                <%# user %>
                <%# JSON.parse(user); %>
                <button type="button" class="btn btn-sm btn-outline-secondary item_add">Add to cart</button>
                <h2>Details</h2>
              </div>
              <div class="item_owner" hidden>Byarent</div>
              
              <ul>
                <li>
                  <h6>House type</h6>
                  <ul>
                    <li>
                      <p class="item_name"><%= house.item_name %>.</p>
                    </li>
                  </ul>
                </li>

                <li>
                  <h6>Date posted</h6>
                  <ul>
                    <li>
                      <p><%= house.time %>.</p>
                    </li>
                  </ul>
                </li>

                <li>
                  <h6>Price</h6>
                  <ul>
                    <li>
                      <p class="item_price"> &#8373; <%= house.price %></p>
                    </li>
                  </ul>
                </li>

                <li>
                  <h6>Description</h6>
                  <ul>
                    <li>
                      <p>Soem thinsdfgh f.</p>
                    </li>
                  </ul>
                </li>

                <li>
                  <h6>Property ID</h6>
                  <ul>
                    <li>
                      <p><%= house.id %></p>
                    </li>
                  </ul>
                </li>
              </ul>


              </div>
    
</body>
</html>