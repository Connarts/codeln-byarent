<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Houses for sale</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="js/jquery.js"></script>
        <script src="js/holder.min.js"></script>
        <link rel="stylesheet" href="css/bootstrap.min.css">
        <script src="js/bootstrap.min.js"></script>
        <script src="js/simpleCart.js"></script>
</head>
<body>
        <nav class="navbar navbar-expand-md navbar-dark bg-dark">
                <a class="navbar-brand" href="#">BYARENT</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample04" aria-controls="navbarsExample04" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
                </button>
          
                <div class="collapse navbar-collapse" id="navbarsExample04">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-">
                                <a class="nav-link" href="#">Home</a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" href="#">For sale <span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item">
                              <a class="nav-link" href="/cart">
                                Cart [<span class="simpleCart_quantity"></span> houses]
                              </a>
                            </li>
                            <li class="nav-item dropdown">
                              <a class="nav-link" href="/login">Login</a>
                            </li>
                            <li class="nav-item dropdown">
                              <a class="nav-link" href="/signup">Sign up</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link" href="/contact">Contact</a>
                            </li>
                            <li class="nav-item dropdown">
                              <a class="nav-link" href="/logout">Logout</a>
                            </li>
                        </ul>
                  <form class="form-inline my-2 my-md-0">
                    <input class="form-control" type="text" placeholder="Search">
                  </form>
                </div>
              </nav>
              
              <div class="pt-5 bg-light container">
                <%# loggedin %>
                <%# JSON.parse(user); console.log('===',user, typeof JSON.parse(user) ); %>
                <%# user1 = JSON.parse(user); %>
                <%# user1.id %>
                <h2 class="display-4">Properties on sale</h2>
                <div class="">
              
                  <div class="row">


                    <%= (houses.length == 0 ? 'No properties are avaliable at the moment' : '' ) %>
                       
                    
                    <% houses.forEach((house, hi) => { %>
                    
                    <div class="col-md-4 simpleCart_shelfItem">
                      <div class="card mb-4 shadow-sm">
                    
                        <div id="carousel<%= house.id %>" class="carousel slide" data-ride="carousel">
                          <div class="carousel-inner">
                            <% var watch = 1; %>
                            <%  pictures.forEach((picture, pi) => { %>
                    
                            <%  if (picture.id == house.id) { %>
                    
                            <div class="carousel-item <%= (1 == watch ? 'active' : '' ) %>">
                              <!-- do for each change in hi -->
                              <img class="d-block w-100 <%= (1 == watch ? 'item_thumb' : '' ) %>" src="<%= picture.file %>" alt=" slide">
                            </div>
                            <% watch++; %>
                            <% } %>
                            <% }); %>
                          </div>
                          <a class="carousel-control-prev bg-dark" href="#carousel<%= house.id %>" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                          </a>
                          <a class="carousel-control-next bg-dark" href="#carousel<%= house.id %>" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                          </a>
                        </div>
                    
                        <div class="card-body">
                          <div class="item_owner" hidden>Byarent</div>
                          <p class="lead item_name"><%= house.item_name %></p>
                          <p class="card-text"><%= house.description %>.</p>
                          <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                              <a class="btn btn-sm btn-outline-secondary" href="/house?id=<%= house.id %>">View</a>
                              <!-- <button type="button" class="btn btn-sm btn-outline-secondary">View</button> -->
                              <button type="button" class="btn btn-sm btn-outline-secondary item_add">Add to cart</button>
                            </div>
                            <small class="text-muted item_price">&#8373; <%= house.price %></small>
                          </div>
                        </div>
                      </div>
                    </div>
                    
                    <% }); %>
                    
                    

                  </div>
                </div>
              </div>
</body>
</html>